<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MerchantTestActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/black"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/status_get_printers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;get printers idle&gt;"/>

    <TextView
        android:id="@+id/result_get_printers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Get printers"
          android:id="@+id/button_get_printers"
          android:layout_gravity="left|center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/black"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/status_get_printers_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;get printers idle&gt;"/>

    <TextView
        android:id="@+id/result_get_printers_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:id="@+id/radiogroup_get_printers_category"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left|center_vertical">

      <RadioButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Receipt"
          android:id="@+id/button_receipt"
          android:layout_gravity="left|center_vertical"/>

      <RadioButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Order"
          android:id="@+id/button_order"
          android:layout_gravity="left|center_vertical"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Get printers by category"
          android:id="@+id/button_get_printers_category"
          android:layout_gravity="left|center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/black"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/status_isset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;is set idle&gt;"/>

    <TextView
        android:id="@+id/result_isset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Is printer set?"
          android:id="@+id/button_isset"
          android:layout_gravity="left|center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/black"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/status_get_printer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;get printer by id idle&gt;"/>

    <TextView
        android:id="@+id/result_get_printer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <EditText
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_get_printer_id"
        android:hint="Printer ID"
        android:singleLine="true"
        android:layout_gravity="left|center_vertical"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Get printer by ID"
          android:id="@+id/button_get_printer_id"
          android:layout_gravity="left|center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/black"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/status_set_printer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;set printers idle&gt;"/>

    <TextView
        android:id="@+id/result_set_printer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Set (create) printer"
          android:id="@+id/button_set_printer"
          android:layout_gravity="left|center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/black"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/status_remove_printer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;set printers idle&gt;"/>

    <EditText
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_remove_printer"
        android:hint="Printer ID"
        android:editable="false"
        android:singleLine="true"
        android:layout_gravity="left|center_vertical"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Remove printer"
          android:id="@+id/button_remove_printer"
          android:layout_gravity="left|center_vertical"/>

    </LinearLayout>

  </LinearLayout>
</ScrollView>
